<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <OutputType>Library</OutputType>        <!-- QUAN TRỌNG: xuất DLL -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>XocDiaLiveHit</AssemblyName>
    <RootNamespace>XocDiaLiveHit</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ABX.Core\ABX.Core.csproj" />
  </ItemGroup>

  <!-- Sau khi build, tự copy đúng thư mục Hub đang chạy -->
  <Target Name="CopyPluginToHub" AfterTargets="Build">
    <PropertyGroup>
      <HubPluginsDir>$(SolutionDir)ABX.Hub\bin\$(Configuration)\$(TargetFramework)\Plugins\</HubPluginsDir>
    </PropertyGroup>
    <Message Text="Copy $(TargetPath) => $(HubPluginsDir)" Importance="high" />
    <MakeDir Directories="$(HubPluginsDir)" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(HubPluginsDir)" SkipUnchangedFiles="true" />
  </Target>
</Project>
