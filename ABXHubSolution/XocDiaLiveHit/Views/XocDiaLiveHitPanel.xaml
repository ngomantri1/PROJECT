<UserControl
    x:Class="XocDiaLiveHit.Views.XocDiaLiveHitPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Root">


    <Grid x:Name="RootHost" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <Border
            x:Name="AutoWebViewHost_Full"
            Grid.Column="0"
            Margin="12"
            Background="Black"
            CornerRadius="8" />


        <ScrollViewer Grid.Column="1" Margin="12">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,12"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Đăng nhập &amp; Điều hướng (LIVE)" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
